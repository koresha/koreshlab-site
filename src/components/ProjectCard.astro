---
const { p } = Astro.props;
---
<article class="glass rounded-xl sm:rounded-2xl p-4 sm:p-6 hover:translate-y-[-2px] hover:shadow-lg hover:shadow-brand-red/10 transition-all duration-300 group">
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-base sm:text-lg font-bold group-hover:text-brand-red transition-colors leading-tight">
      {p.title}
    </h3>
    <iconify-icon 
      icon="solar:arrow-right-up-outline" 
      class="w-4 h-4 sm:w-5 sm:h-5 opacity-0 group-hover:opacity-100 transition-opacity text-brand-red flex-shrink-0 ml-2"
    ></iconify-icon>
  </div>
  
  <p class="p mb-4 text-xs sm:text-sm leading-relaxed">{p.summary}</p>
  
  <div class="flex flex-wrap gap-1.5 sm:gap-2">
    {p.badges.map((b: string) => 
      <span class="tag text-xs px-2 py-1">{b}</span>
    )}
  </div>
  
  {(p.link || p.repo) && (
    <div class="mt-3 sm:mt-4 pt-3 sm:pt-4 border-t border-white/10 space-y-2">
      {p.link && (
        <a 
          href={p.link} 
          target="_blank" 
          rel="noopener" 
          class="inline-flex items-center gap-2 text-xs sm:text-sm text-brand-red hover:underline"
        >
          <iconify-icon icon="solar:link-outline" class="w-3 h-3 sm:w-4 sm:h-4"></iconify-icon>
          View Project
        </a>
      )}
      
      {p.repo && (
        <a 
          href={p.repo} 
          target="_blank" 
          rel="noopener" 
          class="inline-flex items-center gap-2 text-xs sm:text-sm text-gray-500 hover:text-brand-red transition-colors block"
        >
          <iconify-icon icon="mdi:github" class="w-3 h-3 sm:w-4 sm:h-4"></iconify-icon>
          Source Code
        </a>
      )}
    </div>
  )}
</article>
