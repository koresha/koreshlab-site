---
import { site } from '../content/data/site';
---
<section class="section pt-28 md:pt-40 relative overflow-hidden" id="home">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-red/5 via-transparent to-transparent"></div>
  
  <div class="container grid md:grid-cols-2 gap-10 items-center relative z-10">
    <div class="space-y-6">
      <h1 class="h1">
        SRE â€¢ 
        <span class="text-brand-red bg-gradient-to-r from-brand-red to-red-400 bg-clip-text text-transparent">
          DevSecOps
        </span>
      </h1>
      <p class="p max-w-xl text-xl">{site.blurb}</p>
      <div class="flex flex-wrap gap-3">
        <a href="/#contact" class="btn">Contact me</a>
        <a href={`mailto:${site.email}`} class="tag">
          <iconify-icon icon="solar:letter-outline" class="w-4 h-4"></iconify-icon>
          Email
        </a>
        <a href={site.github} target="_blank" rel="noopener" class="tag">
          <iconify-icon icon="mdi:github" class="w-4 h-4"></iconify-icon>
          GitHub
        </a>
      </div>
    </div>
    <div class="glass rounded-3xl p-8 shadow-2xl hover:shadow-brand-red/10 hover:shadow-3xl transition-all duration-500">
      <div class="rounded-2xl overflow-hidden bg-gradient-to-br from-gray-800 via-gray-900 to-black p-8 text-center">
        <div class="space-y-4">
          <div class="w-20 h-20 mx-auto rounded-full bg-gradient-to-br from-brand-red to-red-400 flex items-center justify-center text-3xl font-bold text-white">
            K
          </div>
          <h3 class="text-2xl font-bold text-white">{site.name}</h3>
          <p class="text-gray-300">{site.role}</p>
          <div class="flex items-center justify-center gap-2 text-gray-400">
            <iconify-icon icon="solar:map-point-outline" class="w-4 h-4"></iconify-icon>
            <span class="text-sm">{site.location}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
