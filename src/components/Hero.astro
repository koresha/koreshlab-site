---
import { site } from '../content/data/site';
---
<section class="section pt-20 sm:pt-28 md:pt-40 relative overflow-hidden" id="home">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-red/5 via-transparent to-transparent"></div>
  
  <div class="container grid md:grid-cols-2 gap-6 md:gap-10 items-center relative z-10">
    <div class="space-y-4 sm:space-y-6 text-center md:text-left">
      <h1 class="h1">
        SRE â€¢ 
        <span class="text-brand-red bg-gradient-to-r from-brand-red to-red-400 bg-clip-text text-transparent">
          DevSecOps
        </span>
      </h1>
      <p class="p max-w-xl mx-auto md:mx-0 text-lg sm:text-xl leading-relaxed">{site.blurb}</p>
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 items-center justify-center md:justify-start">
        <a href="/#contact" class="btn w-full sm:w-auto">Contact me</a>
        <div class="flex flex-wrap gap-3 justify-center md:justify-start">
          <a href={`mailto:${site.email}`} class="tag">
            <iconify-icon icon="solar:letter-outline" class="w-4 h-4"></iconify-icon>
            Email
          </a>
          <a href={site.github} target="_blank" rel="noopener" class="tag">
            <iconify-icon icon="mdi:github" class="w-4 h-4"></iconify-icon>
            GitHub
          </a>
        </div>
      </div>
    </div>
    <div class="glass rounded-2xl sm:rounded-3xl p-6 sm:p-8 shadow-2xl hover:shadow-brand-red/10 hover:shadow-3xl transition-all duration-500 order-first md:order-last">
      <div class="rounded-xl sm:rounded-2xl overflow-hidden bg-gradient-to-br from-gray-800 via-gray-900 to-black p-6 sm:p-8 text-center">
        <div class="space-y-3 sm:space-y-4">
          <div class="w-16 h-16 sm:w-20 sm:h-20 mx-auto rounded-full bg-gradient-to-br from-brand-red to-red-400 flex items-center justify-center overflow-hidden">
            <img src="/logo-koresha.png" alt="Koresha Logo" class="w-12 h-12 sm:w-16 sm:h-16 object-contain" />
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-white">{site.name}</h3>
          <p class="text-gray-300 text-sm sm:text-base">{site.role}</p>
          <div class="flex items-center justify-center gap-2 text-gray-400">
            <iconify-icon icon="solar:map-point-outline" class="w-4 h-4"></iconify-icon>
            <span class="text-xs sm:text-sm">{site.location}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
