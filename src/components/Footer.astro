---
import { site } from '../content/data/site';
---
<footer class="py-12 sm:py-16 border-t border-white/10">
  <div class="container">
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8 mb-6 sm:mb-8">
      <!-- Brand -->
      <div class="space-y-3 sm:space-y-4 text-center sm:text-left">
        <div class="flex items-center gap-2 justify-center sm:justify-start">
          <div class="w-6 h-6 rounded-lg bg-gradient-to-br from-brand-red to-red-400 flex items-center justify-center text-sm font-bold text-white">
            K
          </div>
          <span class="font-bold text-base sm:text-lg">{site.name}</span>
        </div>
        <p class="text-xs sm:text-sm text-gray-500 dark:text-gray-400">
          {site.role}
        </p>
      </div>
      
      <!-- Quick Links -->
      <div class="space-y-3 sm:space-y-4 text-center sm:text-left">
        <h4 class="font-semibold text-sm sm:text-base">Quick Links</h4>
        <nav class="space-y-1.5 sm:space-y-2">
          <a href="/#about" class="block text-xs sm:text-sm text-gray-500 hover:text-brand-red transition">About</a>
          <a href="/#experience" class="block text-xs sm:text-sm text-gray-500 hover:text-brand-red transition">Experience</a>
          <a href="/#projects" class="block text-xs sm:text-sm text-gray-500 hover:text-brand-red transition">Projects</a>
          <a href="/#contact" class="block text-xs sm:text-sm text-gray-500 hover:text-brand-red transition">Contact</a>
        </nav>
      </div>
      
      <!-- Contact -->
      <div class="space-y-3 sm:space-y-4 text-center sm:text-left sm:col-span-2 md:col-span-1">
        <h4 class="font-semibold text-sm sm:text-base">Get in Touch</h4>
        <div class="space-y-2 flex flex-col items-center sm:items-start">
          <a 
            href={`mailto:${site.email}`} 
            class="flex items-center gap-2 text-xs sm:text-sm text-gray-500 hover:text-brand-red transition"
          >
            <iconify-icon icon="solar:letter-outline" class="w-3 h-3 sm:w-4 sm:h-4"></iconify-icon>
            {site.email}
          </a>
          <a 
            href={site.github} 
            target="_blank" 
            rel="noopener"
            class="flex items-center gap-2 text-xs sm:text-sm text-gray-500 hover:text-brand-red transition"
          >
            <iconify-icon icon="mdi:github" class="w-3 h-3 sm:w-4 sm:h-4"></iconify-icon>
            GitHub
          </a>
        </div>
      </div>
    </div>
    
    <div class="pt-6 sm:pt-8 border-t border-white/10 text-center text-xs sm:text-sm text-gray-500">
      <p>© {new Date().getFullYear()} {site.name} — Built with Astro · Deployed on Netlify</p>
    </div>
  </div>
</footer>
