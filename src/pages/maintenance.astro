---
import MaintenanceLayout from '../layouts/MaintenanceLayout.astro';
---

<MaintenanceLayout title="Maintenance — Koresha">
  <div class="maintenance-container">
    <!-- Animated Grid Background -->
    <div class="grid-background"></div>
    
    <!-- Gradient Orbs -->
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>

    <!-- Main Content -->
    <div class="maintenance-wrapper">
      <!-- Hero Section -->
      <div class="hero-section">
        <div class="badge">SYSTEM MAINTENANCE</div>
        <h1 class="main-title">
          <span class="title-line">Infrastructure</span>
          <span class="title-line">Upgrade</span>
        </h1>
        <p class="subtitle">We're deploying the latest updates to improve your experience</p>
      </div>

      <!-- Terminal Window -->
      <div class="terminal-container">
        <div class="terminal-window">
          <div class="terminal-header">
            <div class="terminal-buttons">
              <span class="terminal-btn close"></span>
              <span class="terminal-btn minimize"></span>
              <span class="terminal-btn maximize"></span>
            </div>
            <div class="terminal-title">
              <iconify-icon icon="mdi:console-line" class="w-3.5 h-3.5"></iconify-icon>
              <span>koreshlab-sre@maintenance</span>
            </div>
          </div>
          <div class="terminal-body" id="terminal"></div>
        </div>
      </div>

      <!-- Status Grid -->
      <div class="status-grid">
        <div class="status-card">
          <div class="status-icon-wrapper">
            <iconify-icon icon="mdi:kubernetes" class="status-icon"></iconify-icon>
          </div>
          <div class="status-info">
            <div class="status-name">Kubernetes</div>
            <div class="status-state">
              <span class="status-dot"></span>
              <span>Operational</span>
            </div>
          </div>
        </div>

        <div class="status-card">
          <div class="status-icon-wrapper">
            <iconify-icon icon="mdi:database-outline" class="status-icon"></iconify-icon>
          </div>
          <div class="status-info">
            <div class="status-name">Database</div>
            <div class="status-state">
              <span class="status-dot"></span>
              <span>Syncing</span>
            </div>
          </div>
        </div>

        <div class="status-card">
          <div class="status-icon-wrapper">
            <iconify-icon icon="mdi:cloud-outline" class="status-icon"></iconify-icon>
          </div>
          <div class="status-info">
            <div class="status-name">CDN</div>
            <div class="status-state">
              <span class="status-dot"></span>
              <span>Propagating</span>
            </div>
          </div>
        </div>

        <div class="status-card">
          <div class="status-icon-wrapper">
            <iconify-icon icon="mdi:shield-check-outline" class="status-icon"></iconify-icon>
          </div>
          <div class="status-info">
            <div class="status-name">Security</div>
            <div class="status-state">
              <span class="status-dot"></span>
              <span>Hardening</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Progress Section -->
      <div class="progress-section">
        <div class="progress-header">
          <span class="progress-label">Deployment Progress</span>
          <span class="progress-percent" id="progress-percent">0%</span>
        </div>
        <div class="progress-bar-wrapper">
          <div class="progress-bar">
            <div class="progress-fill" id="progress-fill"></div>
          </div>
        </div>
      </div>

      <!-- Contact Section -->
      <div class="contact-section">
        <p class="contact-text">Need immediate assistance?</p>
        <a href="mailto:contact.koreshlab@gmail.com" class="contact-link">
          <iconify-icon icon="mdi:email-outline" class="w-4 h-4"></iconify-icon>
          <span>contact.koreshlab@gmail.com</span>
        </a>
      </div>
    </div>
  </div>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap');

    /* Force dark background on html and body - use :global() for Astro */
    :global(html),
    :global(body) {
      background: #0a0a0f !important;
      color: #ffffff !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }

    :global(body.antialiased) {
      background: #0a0a0f !important;
      color: #ffffff !important;
    }

    .maintenance-container {
      min-height: 100vh;
      width: 100%;
      background: #0a0a0f !important;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem 1.5rem;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      color: #ffffff !important;
      box-sizing: border-box;
    }

    /* Grid Background */
    .grid-background {
      position: absolute;
      inset: 0;
      background-image: 
        linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
      background-size: 60px 60px;
      opacity: 0.4;
      animation: grid-move 20s linear infinite;
    }

    @keyframes grid-move {
      0% { transform: translate(0, 0); }
      100% { transform: translate(60px, 60px); }
    }

    /* Gradient Orbs */
    .gradient-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.15;
      animation: orb-float 20s ease-in-out infinite;
    }

    .orb-1 {
      width: 500px;
      height: 500px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      top: -250px;
      left: -250px;
      animation-delay: 0s;
    }

    .orb-2 {
      width: 400px;
      height: 400px;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      bottom: -200px;
      right: -200px;
      animation-delay: 7s;
    }

    .orb-3 {
      width: 350px;
      height: 350px;
      background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
      top: 50%;
      right: 10%;
      animation-delay: 14s;
    }

    @keyframes orb-float {
      0%, 100% {
        transform: translate(0, 0) scale(1);
      }
      33% {
        transform: translate(30px, -30px) scale(1.1);
      }
      66% {
        transform: translate(-20px, 20px) scale(0.9);
      }
    }

    /* Main Wrapper */
    .maintenance-wrapper {
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 1200px;
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      padding: 2rem 0;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem 1.25rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 100px;
      font-size: 0.75rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);
    }

    .main-title {
      font-size: clamp(3rem, 8vw, 6.5rem);
      font-weight: 800;
      line-height: 1.1;
      margin: 0;
      background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.7) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.02em;
    }

    .title-line {
      display: block;
      animation: fadeInUp 0.8s ease-out backwards;
    }

    .title-line:nth-child(2) {
      animation-delay: 0.2s;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .subtitle {
      font-size: 1.25rem;
      font-weight: 400;
      color: rgba(255, 255, 255, 0.6);
      margin-top: 1.5rem;
      letter-spacing: -0.01em;
    }

    /* Terminal Container */
    .terminal-container {
      margin: 2rem 0;
    }

    .terminal-window {
      background: rgba(10, 10, 15, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      overflow: hidden;
      backdrop-filter: blur(20px);
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .terminal-header {
      background: rgba(255, 255, 255, 0.03);
      padding: 0.875rem 1.25rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .terminal-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .terminal-btn {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: block;
      transition: opacity 0.2s;
    }

    .terminal-btn:hover {
      opacity: 0.7;
    }

    .terminal-btn.close {
      background: #ff5f56;
    }

    .terminal-btn.minimize {
      background: #ffbd2e;
    }

    .terminal-btn.maximize {
      background: #27c93f;
    }

    .terminal-title {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.8125rem;
      font-weight: 500;
      font-family: 'JetBrains Mono', monospace;
      flex: 1;
    }

    .terminal-body {
      padding: 2rem;
      min-height: 400px;
      max-height: 500px;
      overflow-y: auto;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      line-height: 1.8;
      color: rgba(255, 255, 255, 0.9);
    }

    .terminal-body::-webkit-scrollbar {
      width: 8px;
    }

    .terminal-body::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
    }

    .terminal-body::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 4px;
    }

    .terminal-line {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 0.75rem;
      animation: terminalFadeIn 0.4s ease-out;
    }

    @keyframes terminalFadeIn {
      from {
        opacity: 0;
        transform: translateX(-10px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .terminal-prompt {
      color: #667eea;
      font-weight: 600;
      flex-shrink: 0;
    }

    .terminal-command {
      color: rgba(255, 255, 255, 0.95);
      font-weight: 400;
    }

    .terminal-command.typing::after {
      content: '▊';
      animation: blink 1s infinite;
      color: #667eea;
      margin-left: 2px;
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    .terminal-output {
      color: rgba(255, 255, 255, 0.5);
      margin-left: 1.5rem;
      font-weight: 400;
      line-height: 1.6;
    }

    /* Status Grid */
    .status-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.25rem;
    }

    .status-card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      padding: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      backdrop-filter: blur(10px);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .status-card:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.15);
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .status-icon-wrapper {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      background: rgba(102, 126, 234, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .status-icon {
      width: 24px;
      height: 24px;
      color: #667eea;
    }

    .status-info {
      flex: 1;
      min-width: 0;
    }

    .status-name {
      font-size: 0.875rem;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 0.375rem;
    }

    .status-state {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.8125rem;
      color: rgba(255, 255, 255, 0.6);
      font-weight: 400;
    }

    .status-dot {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: #10b981;
      box-shadow: 0 0 8px rgba(16, 185, 129, 0.5);
      animation: pulse-dot 2s ease-in-out infinite;
    }

    @keyframes pulse-dot {
      0%, 100% {
        opacity: 1;
        transform: scale(1);
      }
      50% {
        opacity: 0.8;
        transform: scale(1.2);
      }
    }

    /* Progress Section */
    .progress-section {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      padding: 1.5rem;
      backdrop-filter: blur(10px);
    }

    .progress-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .progress-label {
      font-size: 0.875rem;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.7);
    }

    .progress-percent {
      font-size: 0.875rem;
      font-weight: 600;
      color: #667eea;
      font-family: 'JetBrains Mono', monospace;
    }

    .progress-bar-wrapper {
      position: relative;
    }

    .progress-bar {
      width: 100%;
      height: 6px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 3px;
      overflow: hidden;
      position: relative;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
      border-radius: 3px;
      width: 0%;
      transition: width 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .progress-fill::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(100%);
      }
    }

    /* Contact Section */
    .contact-section {
      text-align: center;
      padding: 2rem 0;
    }

    .contact-text {
      font-size: 0.9375rem;
      color: rgba(255, 255, 255, 0.6);
      margin-bottom: 1rem;
    }

    .contact-link {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1.75rem;
      background: rgba(102, 126, 234, 0.1);
      border: 1px solid rgba(102, 126, 234, 0.3);
      border-radius: 8px;
      color: #667eea;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9375rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      backdrop-filter: blur(10px);
    }

    .contact-link:hover {
      background: rgba(102, 126, 234, 0.2);
      border-color: rgba(102, 126, 234, 0.5);
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(102, 126, 234, 0.2);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .maintenance-container {
        padding: 2rem 1rem;
      }

      .maintenance-wrapper {
        gap: 2rem;
      }

      .terminal-body {
        min-height: 300px;
        padding: 1.5rem;
        font-size: 0.8125rem;
      }

      .status-grid {
        grid-template-columns: 1fr;
      }

      .subtitle {
        font-size: 1.125rem;
      }
    }
  </style>

  <script>
    // Terminal Animation
    const terminal = document.getElementById('terminal');
    const commands = [
      { 
        cmd: 'kubectl get pods --all-namespaces', 
        output: 'NAMESPACE     NAME                              READY   STATUS    RESTARTS   AGE\nkube-system   coredns-xxx                       1/1     Running   0          5d\nkube-system   kube-proxy-xxx                   1/1     Running   0          5d' 
      },
      { 
        cmd: 'helm list --all-namespaces', 
        output: 'NAME            NAMESPACE       REVISION    STATUS      CHART\nnginx-ingress   ingress-nginx   1           deployed    nginx-ingress-4.0.0' 
      },
      { 
        cmd: 'kubectl get nodes', 
        output: 'NAME           STATUS   ROLES           AGE   VERSION\nnode-1         Ready    control-plane   5d    v1.28.0\nnode-2         Ready    <none>          5d    v1.28.0' 
      },
      { 
        cmd: 'terraform plan', 
        output: 'Plan: 12 to add, 3 to change, 1 to destroy.\n\nChanges to Outputs:\n  + infrastructure_version = "2.0.0"' 
      },
      { 
        cmd: 'ansible-playbook deploy.yml', 
        output: 'PLAY [Deploy Infrastructure] ****************************\nTASK [Gathering Facts] ****************************\nok: [localhost]\nTASK [Deploy services] ****************************\nchanged: [localhost]' 
      },
      { 
        cmd: 'docker ps', 
        output: 'CONTAINER ID   IMAGE                    STATUS          PORTS\nabc123def456   nginx:latest             Up 2 hours      0.0.0.0:80->80/tcp\n789ghi012jkl   postgres:15              Up 2 hours      5432/tcp' 
      },
      { 
        cmd: 'kubectl rollout status deployment/app', 
        output: 'deployment "app" successfully rolled out' 
      }
    ];

    let commandIndex = 0;
    let isTyping = false;

    function addTerminalLine(command, output = null) {
      const line = document.createElement('div');
      line.className = 'terminal-line';
      
      const prompt = document.createElement('span');
      prompt.className = 'terminal-prompt';
      prompt.textContent = '$';
      
      const cmd = document.createElement('span');
      cmd.className = 'terminal-command';
      cmd.textContent = command;
      
      line.appendChild(prompt);
      line.appendChild(cmd);
      terminal.appendChild(line);

      if (output) {
        setTimeout(() => {
          const outputLine = document.createElement('div');
          outputLine.className = 'terminal-output';
          outputLine.textContent = output;
          terminal.appendChild(outputLine);
          terminal.scrollTop = terminal.scrollHeight;
        }, 800);
      }
    }

    function typeNextCommand() {
      if (isTyping) return;
      isTyping = true;

      const { cmd, output } = commands[commandIndex];
      
      const line = document.createElement('div');
      line.className = 'terminal-line';
      
      const prompt = document.createElement('span');
      prompt.className = 'terminal-prompt';
      prompt.textContent = '$';
      
      const cmdSpan = document.createElement('span');
      cmdSpan.className = 'terminal-command typing';
      cmdSpan.textContent = '';
      
      line.appendChild(prompt);
      line.appendChild(cmdSpan);
      terminal.appendChild(line);

      let charIndex = 0;
      const typingInterval = setInterval(() => {
        if (charIndex < cmd.length) {
          cmdSpan.textContent += cmd[charIndex];
          charIndex++;
        } else {
          clearInterval(typingInterval);
          cmdSpan.classList.remove('typing');
          
          if (output) {
            setTimeout(() => {
              const outputLine = document.createElement('div');
              outputLine.className = 'terminal-output';
              outputLine.textContent = output;
              terminal.appendChild(outputLine);
              terminal.scrollTop = terminal.scrollHeight;
            }, 500);
          }

          commandIndex = (commandIndex + 1) % commands.length;
          isTyping = false;
          
          terminal.scrollTop = terminal.scrollHeight;
        }
      }, 40);
    }

    // Start typing commands
    setTimeout(() => {
      typeNextCommand();
      setInterval(typeNextCommand, 4500);
    }, 1500);

    // Progress bar animation
    const progressFill = document.getElementById('progress-fill');
    const progressPercent = document.getElementById('progress-percent');
    let progress = 0;
    
    const progressInterval = setInterval(() => {
      if (progress < 100) {
        progress = Math.min(progress + Math.random() * 1.5, 100);
        progressFill.style.width = progress + '%';
        progressPercent.textContent = Math.floor(progress) + '%';
      } else {
        clearInterval(progressInterval);
      }
    }, 150);

    // Auto-scroll terminal
    setInterval(() => {
      terminal.scrollTop = terminal.scrollHeight;
    }, 100);
  </script>
</MaintenanceLayout>
